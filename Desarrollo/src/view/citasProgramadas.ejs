<!DOCTYPE html>
<html lang="es">
    <%- include ("templates/head.ejs", {titulo: 'Citas', css: '/css/schedule.css'}) %>
    <link rel="stylesheet" href="css/evo-calendar.min.css" />
    <link rel="stylesheet" href="css/evo-calendar.midnight-blue.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<body>
    <div id="overlay"></div>

    <!-- Pop-up para agregar ficha -->
    <div id="popup">
        <!-- Contenido del pop-up -->
        <div id="popup-content">
            <div class="contenedor">
                <div class="ingreso-container">
                    <h2>Ficha Médica</h2>
                    <form class="ingreso-form" action="#" method="post">
                        <div class="nombre">
                            <input type="text" id="nombre" name="nombre" placeholder="Nombre" required>
                        </div>
                        <div class="tipo">
                            <input type="text" id="tipo" name="tipo" placeholder="Tipo" required>
                        </div>
                        <div class="sexo-raza">
                            <div class="raza">
                                <input type="text" id="raza" name="raza" placeholder="Raza" required>
                            </div>
                            <div class="sexo">
                                <input type="text" id="sexo" name="sexo" placeholder="Sexo" required>
                            </div>
                        </div>
                        <div class="fecha">
                            <label>Fecha de Nacimiento<input type="date" id="fecha" name="fecha" placeholder="Fecha" required></label>
                        </div>
                        <div class="nombre">
                            <input type="text" id="chequeo" name="chequeo" placeholder="Chequeo" required>
                        </div>
                        <div class="nombre">
                            <input type="text" id="diag" name="diag" placeholder="Diagnóstico" required>
                        </div>
                        <div class="nombre">
                            <input type="text" id="trat" name="trat" placeholder="Tratamiento" required>
                        </div>
                        <button id="btnIngresar" type="button" >Guardar</button>
                    </form>
                </div>
            </div>
            <button id="cerrar-popup">Cerrar</button>
        </div>
    </div>
   
    <%- include ("templates/admin.header.ejs") %>;
    <div class="content-container">
        <h1 class="titulo">Citas programadas</h1>
        <div id="calendar"></div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
    <script src="js/evo-calendar.min.js"></script>
    <script
		src="https://kit.fontawesome.com/81581fb069.js"
		crossorigin="anonymous"
	></script>

    <script>
        $(document).ready(function() {
            // Mostrar el pop-up al hacer clic en el botón "Agregar Ficha"
            $(document).on('click', '#btn-agregar', function() {
                $('#overlay').show();
                $('#popup').show();
            });

            // Cerrar el pop-up al hacer clic en el botón "Cerrar"
            $(document).on('click', '#cerrar-popup', function() {
                $('#overlay').hide();
                $('#popup').hide();
            });
        });
    </script>
    
    <script src="js/schedule.js"> </script>
    
  </body>
</html>